@require '../bower_components/font-awesome/css/font-awesome.min.css'
@require 'stylesheets/nav'


.full-screen-img
  background: url(img/bg.jpg)
  background-size: 400vh
  width: 100%
  height: 100vh
  box-sizing: border-box
  padding: 15px 0

*, body
  margin: 0

pt-sans()
  font-family 'PT Sans', sans-serif

@media (min-width: 576px)
  .container
    width: 540px
    max-width: 100%
    margin: 0 auto

@media (min-width: 768px)
  .container
    width: 720px
    max-width: 100%

@media (min-width: 992px)
  .container
    width: 960px
    max-width: 100%

@media (min-width: 1200px)
  .container
    width: 1140px
    max-width: 100%

@require '../bower_components/stylus-grid-constructor/src/grid-constructor'

$my-breakpoints = 576px, 768px, 992px, 1200px
grid-constructor(12, 15px, $default-suffixes, $my-breakpoints)

.syncer
  background: #FBFBFB
  padding: 20px 0

.syncer_second
  background: #f8f8f8

.syncer_white
  background: #fff

.syncer-text
  color #000
  font-size: 16px
  pt-sans()

.syncer-heading
  color #000
  font-size 28px
  text-transform: uppercase
  pt-sans()
  text-align: center
  &:before
    border-top: 3px solid #C65800
    content: ''
    width: 30px
    display: block
    margin: 0 auto 4px

.main-heading
  pt-sans()
  color #fff
  font-size: 36px
  text-align: center

.centralize
  display: flex
  justify-content: center
  align-items: center
  height: 100vh

.header-phone
  pt-sans()
  color #fff
  font-size 19px

.header-email
  pt-sans()
  color #fff
  font-size 19px

.align-right
  text-align: right

.img
  max-width: 100%
