@require '../bower_components/font-awesome/css/font-awesome.min.css'
@font-face
  font-family 'FontAwesome'
  src url('fonts/fontawesome-webfont.eot?v=4.7.0')
  src url('fonts/fontawesome-webfont.eot?#iefix&v=4.7.0') format('embedded-opentype'), url('fonts/fontawesome-webfont.woff2?v=4.7.0') format('woff2'), url('fonts/fontawesome-webfont.woff?v=4.7.0') format('woff'), url('fonts/fontawesome-webfont.ttf?v=4.7.0') format('truetype'), url('fonts/fontawesome-webfont.svg?v=4.7.0#fontawesomeregular') format('svg')
  font-weight normal
  font-style normal

@require '../bower_components/stylus-grid-constructor/src/grid-flex'
grid-flex()

pt-sans()
  font-family 'PT Sans', sans-serif
  font-weight 400

@require 'stylesheets/nav'
@require 'stylesheets/section'
@require 'stylesheets/header'

*, body
  margin: 0

html, body
  height 100%

.full-screen-img
  background: #000 url(img/bg-xs.jpg) no-repeat 50% 0
  height: 100vh
  box-sizing: border-box
  padding: 15px 0
  @media (min-width: 544px)
    background: #000 url(img/bg-sm.jpg) no-repeat 50% 0
  @media (min-width: 768px)
    background: #000 url(img/bg-md.jpg) no-repeat 50% 0
  @media (min-width: 992px)
    background: #000 url(img/bg-lg.jpg) no-repeat 50% 0
  @media (min-width: 1200px)
    background: #000 url(img/welding.jpg) no-repeat 50% 0

@media (min-width: 544px)
  .container
    width: 540px
    max-width: 100%
    margin: 0 auto

@media (min-width: 768px)
  .container
    width: 720px
    max-width: 100%

@media (min-width: 992px)
  .container
    width: 960px
    max-width: 100%

@media (min-width: 1200px)
  .container
    width: 1140px
    max-width: 100%

.align-right
  text-align: right

.img
  max-width: 100%

.hidden
  display none