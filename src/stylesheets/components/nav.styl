.nav-btn
  background none
  cursor pointer
  border none
  border-radius 3px
  padding 0
  &:focus
    outline none

.nav-btn__icon
  color #000
  font-size 34px

.nav-btn__text
  color #000
  font-size 34px
  pt-sans()
  padding 0 0 0 13px

.nav
  background #fff
  margin 3px auto
  overflow hidden
  &:after
    position absolute
    opacity .5

.nav__item
  pt-sans()
  color #000
  display block
  font-size 21px
  text-decoration none
  text-align center
  border-bottom 1px solid #111
  padding 15px 0 12px
  &:last-child
    border-bottom 0
  +m-min($md)
    float left
    padding 15px 10px 12px
    border none
    font-size 18px

.nav-container
  position absolute
  margin 1px 0 0 0
  z-index 1
  background #fff
  width 100%
  +m-min($md)
    position relative
  overflow auto