.nav
  background #fff
  margin 3px auto
  overflow hidden
  +m-min($md)
    float: left
  &:after
    position absolute
    opacity .5

.nav-btn
  background none
  cursor pointer
  border none
  border-radius 0
  padding 0
  width 60px
  height 45px
  position relative
  transform rotate(0deg)
  transition .5s ease-in-out
  &:focus
    outline none

.nav-btn__lines
  display block
  position absolute
  height 5px
  width 100%
  background #111
  border-radius 3px
  opacity 1
  left 0
  transform rotate(0deg)
  transition .25s ease-in-out
  &:nth-child(1)
    top 0
  &:nth-child(2)
    top: 18px
  &:nth-child(3)
    top: 18px
  &:nth-child(4)
    top: 36px

.nav-btn__lines_open
  &:nth-child(1)
    top: 18px
    width: 0
    left: 50%
  &:nth-child(2)
    transform: rotate(45deg)
  &:nth-child(3)
    transform: rotate(-45deg)
  &:nth-child(4)
    top: 18px
    width: 0
    left: 50%

.nav-btn__text
  color #000
  font-size 34px
  pt-sans()
  padding 0 0 0 13px

.nav__item
  pt-sans()
  color #000
  display block
  font-size 21px
  text-decoration none
  text-align center
  border-bottom 1px solid #111
  padding 15px 0 12px
  &:last-child
    border-bottom 0
  +m-min($md)
    float left
    padding 7px 10px 5px
    border none
    font-size 18px
    &:hover
      opacity .75
    &:first-child
      padding 7px 10px 5px 0
    &:last-child
      padding 7px 0 5px 10px

.nav-container
  position absolute
  padding 1px 0 0 0
  z-index 1
  background #fff
  width 100%
  border-bottom: 3px solid rgba(0,0,0,0.2)
  overflow auto
  background-clip: padding-box
  +m-min($md)
    position relative
    border-bottom: none

.nav-buttons
  overflow: hidden
  margin: 0 0 20px 0
  +m-min($md)
    margin: 0
    float: right

.nav-buttons__button
  background: none
  color #000
  display: block
  float: left
  margin: 0 7px 0 0
  &:last-child
    margin: 0
