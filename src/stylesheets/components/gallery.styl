.gallery-heading
  pt-sans()
  font-size: 27px
  text-align: center;

$gallery-margin = 3px

.gallery-title
  position absolute
  bottom 0
  color #000
  padding 13px 15px
  background rgba(#fff, .7)
  width calc(100% - 3px * 2)
  box-sizing border-box

.gallery-client
  pt-sans()
  display: block;
  text-align: center;

$gallery-suffixes = 'img-xs', 'img-sm', 'img-md', 'img-lg', 'img-xl'
$default-breakpoints = 544px, 768px, 992px, 1200px
grid-flex(12, $gallery-margin, $gallery-suffixes, $default-breakpoints, '-img')

.gallery__img
  margin $gallery-margin * 2 0 0
  max-width 100%
  display block

.gallery__link
  display block

.row-img
  margin-top $gallery-margin * 2
  &:first-child
    margin-top 0

.gallery-cover
  background rgba(0,0,0, .75)
  position: fixed
  display: block
  height: 100%
  width: 100%
  top: 0
  z-index: 9
