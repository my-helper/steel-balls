.header
  border-bottom 1px solid #ddd

.main-heading
  text-align center

.main-heading__link
  font-family 'Lobster', cursive
  color #000
  font-size 36px
  text-decoration none

.main-heading__description
  font-size 18px
  text-align center

.centralize-vertical
  display flex
  align-items center

.centralize-horizontal
  display flex
  justify-content center

.flex-end
  justify-content flex-end

.header-phone
  pt-sans()
  color #000
  font-size 19px

.header-phone__icon
  color #000
  font-size 30px

.header-email
  pt-sans()
  color #000
  font-size 19px